var assert = require('assert');
var Athlete = require('../athlete.js');

describe("Athlete", function() {


  var athlete;

  beforeEach(function() {
    athlete = new Athlete();
  })

  it("initial hydration is 100", function() {
      assert.strictEqual(100, athlete.hydration)
    });

  it("distance covered", function() {
      assert.strictEqual(0, athlete.distrun)
      });

  it("run increases distance", function() {
    athlete.run();
    assert.strictEqual(10, athlete.distrun)

  })


})
